<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>ONE RECIPE</title>
</head>
<body>
  <nav>
    <a href="/<%= recipe.user %>/recipes/new">Create another Recipe</a>
    <a href="/recipes/<%=recipe._id%>/edit"> Edit this Recipe</a>
    <a href="/users/<%= recipe.user %> "> Back to Dashboard</a>
   
  </nav>
    <h1><%= recipe.name %></h1>
      <section id="show-page">
    
        <div>Yeild</div>
        <div><%= recipe.amount %></div>
        <div>Method</div>
        <div><%= recipe.method%></div>
        <div>Notes</div>
        <div><%=recipe.notes%></div>
        <div><h3>Ingredients</h3></div>
        <table>
     <th> Ingredient</th>
            <th> type</th>
            <th>grams</th>
          </tr>
            <% recipe.ingredients.forEach(function(i){ %>
        <tr>
          <td><%= i.name%></td>
          <td><%= i.method%></td>
          <td><%= i.amount%></td>
          <td><input type="checkbox"></td>
         
          </tr>
          <% }); %>
          </table>
        
</body>
</html>